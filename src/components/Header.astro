---
// src/components/Header.astro
---
<header 
  class="fixed top-0 left-0 w-full z-50 py-3 transition-all duration-300 border-b"
  x-data="{ atTop: true, mobileMenuOpen: false }"
  @scroll.window="atTop = (window.pageYOffset < 20)"
  :class="{ 'bg-neutral border-white/5 shadow-none': atTop, 'bg-base-100/90 backdrop-blur-xl shadow-sm border-base-content/5': !atTop }"
>
  <nav class="max-w-[85rem] w-full mx-auto px-4 md:flex md:items-center md:justify-between" aria-label="Global">
    <div class="flex items-center justify-between">
      <a class="flex-none focus:outline-none" href="/" aria-label="Strona główna Dartrans">
        <img 
          src="/logo_optimized.webp"
          width="120"
          height="40" 
          alt="Logo Dartrans" 
          loading="eager"
          decoding="async"
          class="h-12 w-auto md:h-14"
          :class="{ 'brightness-0 invert opacity-90': atTop, 'opacity-100': !atTop }" 
        />
      </a>

      <div class="md:hidden">
        <button type="button" 
                @click="mobileMenuOpen = !mobileMenuOpen"
                class="flex justify-center items-center size-10 rounded-full border transition-colors focus:outline-none focus:ring-2 focus:ring-primary" 
                :class="{ 'border-white/20 text-white hover:bg-white/10': atTop, 'border-base-content/10 text-base-content hover:bg-base-200': !atTop }"
                :aria-label="mobileMenuOpen ? 'Zamknij menu nawigacyjne' : 'Otwórz menu nawigacyjne'"
                :aria-expanded="mobileMenuOpen">
          <svg x-show="!mobileMenuOpen" class="size-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
          <svg x-show="mobileMenuOpen" x-cloak class="size-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
          <span class="sr-only" x-text="mobileMenuOpen ? 'Zamknij menu' : 'Otwórz menu'">Przełącz menu</span>
        </button>
      </div>
    </div>

    <div 
      x-show="mobileMenuOpen || window.innerWidth >= 768"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      @click.away="mobileMenuOpen = false"
      class="overflow-hidden basis-full grow md:block"
      :class="{ 'block': mobileMenuOpen, 'hidden': !mobileMenuOpen }"
    >
      <div class="flex flex-col gap-6 mt-5 md:flex-row md:items-center md:justify-end md:mt-0 md:ps-5 pe-2">
        <a class="font-medium transition-colors py-2 text-[15px]" 
           :class="{ 'text-white/80 hover:text-white': atTop, 'text-base-content/70 hover:text-primary': !atTop }"
           href="#benefits"
           @click="mobileMenuOpen = false">Korzyści</a>
        <a class="font-medium transition-colors py-2 text-[15px]" 
           :class="{ 'text-white/80 hover:text-white': atTop, 'text-base-content/70 hover:text-primary': !atTop }"
           href="#fleet"
           @click="mobileMenuOpen = false">Flota</a>
        <a class="font-medium transition-colors py-2 text-[15px]" 
           :class="{ 'text-white/80 hover:text-white': atTop, 'text-base-content/70 hover:text-primary': !atTop }"
           href="#faq"
           @click="mobileMenuOpen = false">FAQ</a>
        
        <a class="btn btn-primary btn-md rounded-full px-8 font-bold font-heading text-primary-content shadow-lg shadow-primary/20 border-none transition-all hover:scale-105" 
           href="#apply"
           @click="mobileMenuOpen = false"
           data-gtm-event="cta_click"
           data-gtm-location="header">
          Aplikuj Teraz
        </a>
      </div>
    </div>
  </nav>
</header>