---
// src/components/Benefits.astro
import { getCollection, render } from 'astro:content';

// Получаем коллекцию benefits из Content Collections
const benefitsEntries = await getCollection('benefits');

// Сортируем по полю order
const benefits = benefitsEntries.sort((a, b) => a.data.order - b.data.order);
---

<section id="benefits" class="py-24 md:py-32 bg-neutral relative overflow-hidden reveal">
  <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_0%_0%,_var(--tw-gradient-stops))] from-primary/5 via-transparent to-transparent -z-10"></div>

  <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center mb-20">
      <h2 class="text-4xl font-heading font-extrabold text-white sm:text-5xl md:text-6xl tracking-tight drop-shadow-sm">
        Dlaczego <span class="text-primary">Dartrans?</span>
      </h2>
      <p class="mt-6 text-base md:text-lg font-sans text-white/60 leading-relaxed">
        Rozumiemy wartość Twojej pracy, dlatego stworzyłiśmy warunki, w których jazda jest wygodna i opłacalna.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {await Promise.all(benefits.map(async (benefit) => {
        const { Content } = await render(benefit);
        return (
          <div class="group relative flex flex-col h-full bg-base-100 p-8 rounded-[2rem] border border-white/5 shadow-2xl transition-all duration-500 hover:-translate-y-2 hover:shadow-primary/10">
            <div class="flex items-center justify-between mb-8">
              <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center group-hover:bg-primary group-hover:rotate-6 transition-all duration-500">
                <div class="text-primary group-hover:text-primary-content" set:html={benefit.data.icon} />
              </div>
              <span class="text-4xl font-heading font-black text-primary/10 group-hover:text-primary/20 transition-colors">
                {benefit.data.order.toString().padStart(2, '0')}
              </span>
            </div>
            <h3 class="text-2xl font-heading font-bold text-base-content mb-4 tracking-tight">
              {benefit.data.title}
            </h3>
            <div class="space-y-3 text-base text-base-content/70 leading-relaxed mb-4">
              {benefit.data.checkpoints.map((checkpoint: string) => (
                <p class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span set:html={checkpoint} />
                </p>
              ))}
            </div>
            <div class="text-sm text-base-content/60 leading-relaxed mt-auto pt-4 border-t border-base-content/10">
              <Content />
            </div>
          </div>
        );
      }))}
    </div>
  </div>
</section>