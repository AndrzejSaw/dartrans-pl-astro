---
// src/components/Hero.astro
import { Image } from 'astro:assets';
// Убедитесь, что файл в src/assets/hero-truck.png
import truckImage from '../assets/photo_3.webp'; 
---

<section id="hero" class="hero min-h-[85vh] relative overflow-hidden bg-neutral">
  <Image 
    src={truckImage} 
    alt="Nowoczesna ciężarówka Scania na europejskiej autostradzie - praca dla kierowcy C+E" 
    widths={[640, 1024, 1536, 1920]}
    sizes="100vw"
    format="webp" 
    loading="eager"
    fetchpriority="high"
    decoding="sync"
    quality={70}
    class="absolute inset-0 w-full h-full object-cover z-0" 
  />
  
  <div class="hero-overlay bg-opacity-65 bg-neutral absolute inset-0 z-0"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-neutral/95 via-neutral/40 to-transparent z-0"></div>

  <div class="hero-content text-neutral-content justify-start w-full max-w-[85rem] px-4 relative z-10 pt-32 pb-24 lg:pt-48 lg:pb-40 reveal">
    <div class="max-w-3xl">
      <h1 class="mb-8 text-5xl md:text-6xl lg:text-7xl font-heading font-extrabold text-white drop-shadow-2xl leading-[1.1] tracking-tight">
        Praca dla <span class="text-primary">Kierowcy C+E</span> Europa i Polska
          
      </h1>
      
      <p class="mb-8 text-base md:text-lg lg:text-xl font-sans text-white/95 max-w-xl leading-relaxed drop-shadow-md">
        Zyskaj atrakcyjne zarobki i pracuj na <span class="text-primary font-bold text-xl md:text-2xl tracking-wide">nowych ciężarówkach premium</span>. Oferujemy stabilne zatrudnienie oraz stałe trasy w Polsce i UE.
      </p>

      <div class="alert bg-primary text-white border-none shadow-2xl max-w-xl mb-10 rounded-2xl">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        <div>
          <h2 class="font-bold font-heading">Przyjazna Praca dla Kierowcy!</h2>
          <div class="text-sm">Bez wymiany palet • Bez jazdy nocnej • Bez przestawiania naczep</div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 items-center sm:items-start">
        <a href="#apply" 
           class="btn btn-primary btn-lg font-heading font-bold !text-primary-content rounded-full px-12 shadow-xl shadow-primary/30 border-none transition-all hover:scale-105 active:scale-95"
           aria-label="Przejdź do formularza aplikacyjnego"
           data-gtm-event="cta_click"
           data-gtm-location="hero">
          Aplikuj Teraz
        </a>
        
        <div class="group flex items-center gap-3 px-6 py-3 rounded-full bg-white/10 border border-white/20 backdrop-blur-md shadow-lg transition-all hover:bg-primary hover:border-primary">
           <div class="avatar-group -space-x-4">
              <div class="avatar placeholder border-white/20 w-8 h-8">
                <div class="bg-primary text-primary-content rounded-full w-full flex items-center justify-center">
                  <span class="text-xs font-bold">+</span>
                </div>
              </div>
           </div>
           <span class="text-sm text-white group-hover:text-primary-content font-medium tracking-wide font-sans">120+ kierowców w zespole</span>
        </div>
      </div>
    </div>
  </div>
</section>