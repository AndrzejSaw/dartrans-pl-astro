---
// src/components/Footer.astro
const COMPANY_NAME = import.meta.env.COMPANY_NAME || 'DARTRANS & HENZEL Sp. z o.o.';
const COMPANY_ADDRESS_POSTAL = import.meta.env.COMPANY_ADDRESS_POSTAL || '62-007';
const COMPANY_ADDRESS_CITY = import.meta.env.COMPANY_ADDRESS_CITY || 'Biskupice';
const COMPANY_ADDRESS_STREET = import.meta.env.COMPANY_ADDRESS_STREET || 'ul. Główna 97';
const WHATSAPP_LINK = import.meta.env.WHATSAPP_LINK || 'https://wa.me/';
const TELEGRAM_LINK = import.meta.env.TELEGRAM_LINK || 'https://t.me/TransLogistic';
const COMPANY_LOGO = import.meta.env.COMPANY_LOGO || '/logo_optimized.webp';
---

<footer class="bg-neutral border-t border-white/5 pt-16 pb-8 px-4 reveal">
  <div class="max-w-[85rem] mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      
      <div class="md:col-span-2">
        <a href="/" class="flex-none focus:outline-none transition-transform hover:scale-105 inline-block mb-6">
          <img 
            src={COMPANY_LOGO}
            alt={`${COMPANY_NAME} Logo`}
            class="h-12 w-auto brightness-0 invert opacity-90" 
          />
        </a>
        <p class="text-lg font-sans text-white/85 max-w-sm leading-relaxed mb-6">
          Profesjonalny transport towarowy w Europie. Niezawodny partner dla doświadczonych kierowców C+E.
        </p>
        
      </div>

      <div>
        <h3 class="text-white font-heading font-bold uppercase tracking-widest text-xs mb-6">Sekcje</h3>
        <ul class="space-y-4 font-sans">
          <li><a href="#benefits" class="text-white/90 hover:text-primary font-medium transition-colors">Korzyści</a></li>
          <li><a href="#fleet" class="text-white/90 hover:text-primary font-medium transition-colors">Nasza Flota</a></li>
          <li><a href="#company" class="text-white/90 hover:text-primary font-medium transition-colors">O Nas</a></li>
          <li><a href="#faq" class="text-white/90 hover:text-primary font-medium transition-colors">FAQ</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-white font-heading font-bold uppercase tracking-widest text-xs mb-6">Kontakt</h3>
        <p class="text-white/80 text-sm font-sans font-medium leading-relaxed">
          {COMPANY_NAME}<br>
          {COMPANY_ADDRESS_POSTAL} {COMPANY_ADDRESS_CITY}<br>
          {COMPANY_ADDRESS_STREET}<br>
          Polska<br>
          </p>
      </div>
    </div>

    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-xs font-bold font-sans text-white/70 uppercase tracking-widest">
        © {new Date().getFullYear()} {COMPANY_NAME} Wszelkie prawa zastrzeżone.
      </div>
      <div class="flex gap-8">
        <a href="/privacy" class="text-xs font-bold font-sans text-white/85 hover:text-white uppercase tracking-widest transition-colors">Prywatność</a>
        <a href="/terms" class="text-xs font-bold font-sans text-white/85 hover:text-white uppercase tracking-widest transition-colors">Regulamin</a>
      </div>
    </div>
  </div>
</footer>
