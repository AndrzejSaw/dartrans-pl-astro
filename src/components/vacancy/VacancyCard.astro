---
import type { CollectionEntry } from 'astro:content';
import { marked } from 'marked';

interface Props {
  entry: CollectionEntry<'vacancy'>;
}

const { entry } = Astro.props;

// Determine icon and gradient based on order
const getIconConfig = (order: number) => {
  switch (order) {
    case 1: // Salary
      return {
        gradient: 'from-emerald-500/20 to-green-500/20',
        textColor: 'text-emerald-600',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`
      };
    case 2: // Schedule
      return {
        gradient: 'from-blue-500/20 to-indigo-500/20',
        textColor: 'text-blue-600',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>`
      };
    case 3: // Fleet
      return {
        gradient: 'from-orange-500/20 to-amber-500/20',
        textColor: 'text-orange-600',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`
      };
    case 4: // Support
      return {
        gradient: 'from-violet-500/20 to-purple-500/20',
        textColor: 'text-purple-600',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`
      };
    default:
      return {
        gradient: 'from-gray-500/20 to-slate-500/20',
        textColor: 'text-gray-600',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`
      };
  }
};

const iconConfig = getIconConfig(entry.data.order);
const htmlContent = marked.parse(entry.body || '');
---

<div class="group bg-base-100 rounded-[2rem] p-8 border border-base-content/5 shadow-2xl shadow-primary/5 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-2 transition-all duration-500">
  <div class="flex items-start gap-5 mb-6">
    <div class={`shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br ${iconConfig.gradient} flex items-center justify-center ${iconConfig.textColor} group-hover:scale-110 transition-transform duration-300`} set:html={iconConfig.icon} />
    
    <div class="flex-1">
      <h3 class="font-heading font-bold text-2xl text-base-content mb-1">{entry.data.title}</h3>
    </div>
  </div>
  
  <div class="prose prose-sm max-w-none prose-headings:font-heading prose-headings:text-primary prose-headings:mb-3 prose-strong:text-base-content prose-strong:font-bold prose-ul:space-y-2 prose-li:text-base-content/70 text-base-content/70" set:html={htmlContent} />
</div>
