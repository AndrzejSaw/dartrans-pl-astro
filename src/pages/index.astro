---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Benefits from '../components/Benefits.astro';
import Fleet from '../components/Fleet.astro';
import Company from '../components/Company.astro';
import ProcessAndFAQ from '../components/ProcessAndFAQ.astro';
import LeadForm from '../components/LeadForm.astro';
import Footer from '../components/Footer.astro';

const seoTitle = "Praca Kierowca CE Poznań | Dartrans & Henzel";
const seoDescription = "Szukasz pracy jako kierowca CE w Poznaniu? Dartrans & Henzel oferuje: atrakcyjne wynagrodzenie, nowoczesne ciężarówki Euro 6, elastyczne grafiki 4/1 do 8/4, trasy Europa i Polska. Aplikuj online!";
const seoKeywords = "praca kierowca ce poznań, kierowca ce poznań, praca kierowca międzynarodowy poznań, transport poznań, kierowca c+e poznań, oferty pracy kierowca poznań";
---

<MainLayout title={seoTitle}>
  <Fragment slot="seo">
    <meta name="description" content={seoDescription} />
    <meta name="keywords" content={seoKeywords} />
  </Fragment>
  <Header />
  <main>
    <Hero />
    <Stats />
    <Benefits />
    
    <!-- Divider -->
    <div class="relative h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent max-w-7xl mx-auto"></div>
    
    <Fleet />
    
    <!-- Divider -->
    <div class="relative h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent max-w-7xl mx-auto"></div>
    
    <Company />
    
    <!-- Divider -->
    <div class="relative h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent max-w-7xl mx-auto"></div>
    
    <ProcessAndFAQ />
    
    <!-- Divider -->
    <div class="relative h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent max-w-7xl mx-auto"></div>
    
    <LeadForm />
    <Footer />
  </main>
</MainLayout>